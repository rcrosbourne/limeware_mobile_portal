<h1> Sign In</h1>
<div class="row">
  <div class="span6 offset3 hero-unit">
    <%= form_for(:session, url: sessions_path) do |f| %>
        <%= f.label :email %>
        <%= f.text_field :email, placeholder: "firstName.lastName@time4lime.com" %>

        <%= f.label :password %>
        <%= f.password_field :password %>
        <div class="offset2">
          <%= f.submit "Sign In", class: "btn btn-large btn-inverse" %>
        </div>
    <% end %>
  </div>
</div>